{% extends "layout.njk" %}

{% block content %}
<form class="card" method="post" action="/teachers">
  <section class="avatar" style="background: url(https://source.unsplash.com/collection/71561100/500x500) no-repeat center center / cover"></section>
  <section class="details">
    <h3>Detalhes</h3>
    <div class="item">
      <div>AvatarUrl</div>
      <div>
          <input 
            type="url" 
            name="avatar_url"
            placeholder="http://"
          >
      </div>
    </div>
    <div class="item">
      <div>Nome Completo</div>
      <div>
        <input 
          type="text" 
          name="name"
          placeholder= "Nome Completo"
        >
      </div>
    </div>
    <div class="item">
      <div>Data de Nascimento</div>
      <div>
        <input 
          type="date" 
          name="birth"
        >
      </div>
    </div>
    <div class="item">
      <div>Grau de Escolaridade</div>
      <div>
        <select name="type_graduate">
          <option value="medio_complete">Médio Completo</option>
          <option value="university_complete">Ensino Superior Completo</option>
          <option value="master_complete">Mestrado Completo</option>
          <option value="doctor_complete">Doutorado Completo</option>
        </select>
      </div>
    </div>
    <div class="item">
      <div>Tipo de Aula</div>
      <div>
        <span><input type="radio" name="type_class" value="P" checked>Presencial</span>
        <span><input type="radio" name="type_class" value="D">À Distância</span>
      </div>
    </div>
    <div class="item">
      <div>Área de Atuação</div>
      <div>
        <input 
          type="text" 
          name="services"
          placeholder="Materias Lecionadas pelo professor separadas por virgula"
        >
      </div>
    </div>
    <button type="submit">Salvar</button>
  </section>
</form>

{% endblock content %}