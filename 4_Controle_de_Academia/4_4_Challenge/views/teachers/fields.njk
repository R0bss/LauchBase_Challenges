   <div class="item">
      <div>AvatarUrl</div>
      <div>
          <input 
            type="url" 
            name="avatar_url"
            placeholder="http://"
            value="{{teacher.avatar_url}}"
          >
      </div>
    </div>
    <div class="item">
      <div>Nome Completo</div>
      <div>
        <input 
          type="text" 
          name="name"
          placeholder= "Nome Completo"
          value="{{teacher.name}}"
        >
      </div>
    </div>
    <div class="item">
      <div>Data de Nascimento</div>
      <div>
        <input 
          type="date" 
          name="birth"
          value="{{teacher.birth}}"
        >
      </div>
    </div>
    <div class="item">
      <div>Grau de Escolaridade</div>
      <div>
        <select name="type_graduate">
          <option value="medio_complete" {% if teacher.type_graduate == "medio_complete" %}selected {%endif%} >Médio Completo</option>
          <option value="university_complete" {% if teacher.type_graduate == "university_complete" %}selected {%endif%}>Ensino Superior Completo</option>
          <option value="master_complete" {% if teacher.type_graduate == "master_complete" %}selected {%endif%}>Mestrado Completo</option>
          <option value="doctor_complete" {% if teacher.type_graduate == "doctor_complete" %}selected {%endif%}>Doutorado Completo</option>
        </select>
      </div>
    </div>
    <div class="item">
      <div>Tipo de Aula</div>
      <div>
        <span><input type="radio" name="type_class" value="P" {% if teacher.type_class == "P" %}checked {%endif%}>Presencial</span>
        <span><input type="radio" name="type_class" value="D" {% if teacher.type_class == "D" %}checked {%endif%}>À Distância</span>
      </div>
    </div>
    <div class="item">
      <div>Área de Atuação</div>
      <div>
        <input 
          type="text" 
          name="services"
          placeholder="Materias Lecionadas pelo professor separadas por virgula"
          value="{{teacher.services}}"
        >
      </div>
    </div>
    <button type="submit">Salvar</button>
    