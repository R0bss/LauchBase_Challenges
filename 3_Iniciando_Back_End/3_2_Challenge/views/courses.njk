{% extends "layout.njk" %}
    
    {% block head %}
        <title>Rocketseat</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
        <link rel="stylesheet" href="style.css">
        
    {% endblock %}

    {% block content %}

        <div id="wrapper">
            <h1>Conteudo</h1>
        </div>

        <section class="cards">

            {% for item in items %}
                <div class="card" id="{{item.idCard}}">
                    <div class="card__image-container">
                        <img src="https://blog.rocketseat.com.br/content/images/{{item.idImage}}" alt="Imagem de {{item.idImage}}">
                    </div>
                    <div class="card__content">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="card__info">
                        <p>{{item.author}}</p>
                        <p class="card__time">{{item.duration}}</p>
                    </div>
                </div>    
            {% endfor %}
  
        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="maximize-modal">
                    <i class="material-icons">maximize</i>
                </a>
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>

        <script src="scripts.js">

        </script>
    {% endblock %}